@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>Mobile Data Terminal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/MDT.styles.css" asp-append-version="true"/>
    <link rel="icon" type="image/x-icon" href="/favicon/favicon.ico">
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light box-shadow mb-3" style="background: #27272a">
        <div class="container-fluid">
            <a class="navbar-brand" style="color: #0a53be; font-weight: bold" asp-area="" asp-controller="Home" asp-action="Index">Mobile Data Terminal👮‍♂️</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1 justify-content-evenly">
                    <li class="nav-item">
                        <a class="nav-link" style="color: #ffffff" asp-area="" asp-controller="Home" asp-action="Index">Home🏠</a>
                    </li>
                    @{
                        if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" style="color: #ffffff" asp-area="" asp-controller="Home" asp-action="Citizens">Citizens👫</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: #ffffff" asp-area="" asp-controller="Home" asp-action="Cars">Cars🚗</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" style="color: #ffffff" asp-area="" asp-controller="Home" asp-action="Records">Records🧾</a>
                            </li>
                        }
                    }
                </ul>
                <partial name="_LoginPartial"/>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="footer text-muted">
    <div class="container text-center" style="font-weight: lighter">
        &copy; 2024 - Police Mobile Data Terminal
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>