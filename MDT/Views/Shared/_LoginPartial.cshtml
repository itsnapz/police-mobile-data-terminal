@using Microsoft.AspNetCore.Identity
@using MDT.Data.Identity
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link" style="color: #ffffff; margin-right: 7px">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="margin-right: 7px">
            <a class="nav-link" style="color: #ffffff" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
        <li class="nav-item" style="margin-left: 7px; margin-right: 7px">
            <a class="nav-link" style="color: #ffffff" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
    }
</ul>