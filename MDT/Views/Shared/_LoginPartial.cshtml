@using Microsoft.AspNetCore.Identity
@using MDT.Data.Identity
@inject SignInManager<CustomUser> SignInManager
@inject UserManager<CustomUser> UserManager

<ul class="navbar-nav" style="display: flex; align-items: center;">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item" style="margin-right: 10px">
            <a class="nav-link" style="color: #ffffff" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Welcome, @user.Name @user.Surname👋</a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Home", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link" style="color: #ffffff; margin-right: 7px">Logout🚪</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item" style="margin-right: 7px">
            <a class="nav-link" style="color: #ffffff" asp-area="Identity" asp-page="/Account/Login">Login👮‍♀️</a>
        </li>
        <li class="nav-item" style="margin-left: 7px; margin-right: 7px">
            <a class="nav-link" style="color: #ffffff" asp-area="Identity" asp-page="/Account/Register">Register🆕</a>
        </li>
    }
</ul>