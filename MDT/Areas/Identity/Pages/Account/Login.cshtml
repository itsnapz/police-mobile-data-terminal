@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

    <div style="display: flex; justify-content: center; align-items: center; height: 80vh">
        <section>
            <form id="account" method="post">
                <h2 style="font-weight: bolder; color: #0a53be; text-align: center; font-size: 42px">Login to your account👮‍♂️</h2>
                <hr style="color: #ffffff"/>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background: none; border: none; border-bottom: 2px solid #ffffff; color: #ffffff; border-radius: 0" />
                    <label asp-for="Input.Email" class="form-label" style="color: #ffffff; font-weight: bolder">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" style="background: none; border: none; border-bottom: 2px solid #ffffff; color: #ffffff; border-radius: 0"/>
                    <label asp-for="Input.Password" class="form-label" style="color: #ffffff; font-weight: bolder">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label" style="color: #ffffff">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="font-weight: bold; border-radius: 10px">Login🔐</button>
                </div>
                <div class="text-center" style="margin-top: 20px">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Reset password</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Create new account</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
