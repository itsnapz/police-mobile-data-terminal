@page
@model IndexModel
@{
    ViewData["Title"] = "Profile👮‍♂️";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 style="color: #0d6efd; font-weight: bolder; font-size: 36px">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" placeholder="Please choose your username." style="background: none; border: none; border-bottom: 2px solid #ffffff; color: #ffffff; border-radius: 0" disabled />
                <label asp-for="Username" class="form-label" style="color: #ffffff; font-weight: bolder"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Please enter your phone number." style="background: none; border: none; border-bottom: 2px solid #ffffff; color: #ffffff; border-radius: 0"/>
                <label asp-for="Input.PhoneNumber" class="form-label" style="color: #ffffff; font-weight: bolder"></label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary" style="font-weight: bolder">Save💾</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
