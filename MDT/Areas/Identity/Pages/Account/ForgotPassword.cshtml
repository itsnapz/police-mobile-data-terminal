@page
@model ForgotPasswordModel


<div style="display: flex; justify-content: center; align-items: center; height: 80vh">
    <form method="post">
        <h2 class="text-center" style="font-weight: bolder; color: #0d6efd; text-align: center; font-size: 42px">Reset password🔁</h2>
        <hr style="color: #ffffff"/>
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" style="background: none; border: none; border-bottom: 2px solid #ffffff; color: #ffffff; border-radius: 0"/>
            <label asp-for="Input.Email" class="form-label" style="color: #ffffff; font-weight: bolder"></label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="w-100 btn btn-lg btn-primary" style="font-weight: bold; border-radius: 10px; margin-top: 10px">Reset Password🔑</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
